<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ftinc.showcase.ui.screens.home.HomeActivity">

    <ListView
        android:id="@+id/video_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:listSelector="@color/transparent"
        android:choiceMode="multipleChoiceModal"

        android:dividerHeight="1dp"
        android:divider="@drawable/inset_divider"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        />

    <com.ftinc.showcase.ui.widget.EmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ev_emptyIcon="@mipmap/ic_launcher"
        app:ev_emptyMessage="@string/no_video_message"
        />

    <com.melnykov.fab.FloatingActionButton
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:src="@drawable/ic_action_plus"
        fab:fab_colorNormal="@color/fab"
        fab:fab_colorPressed="@color/fab_pressed"
        fab:fab_colorRipple="@color/white30" />

</RelativeLayout>
